package controle;

import java.util.ArrayList;

import modelo.Orcamento;

public class PetProcess {

	public static ArrayList<Orcamento> orcamentos = new ArrayList<>();
	private static orcamentoDAO pd = new orcamentoDAO();
	
	public static void abrir() {
		orcamentos = pd.ler();
	}
	
	public static void salvar() {
		pd.escrever(orcamentos);
	}
	
	public static void carregarTestes() {
		// Limpar a lista
		orcamentos = new ArrayList<>();
		// Preencher com testes
		orcamentos.add(new Orcamento(1, "Cachorro", "Toto", "Vira Latas", 26, "01/01/2015", "Joaquin", "(19)98787-7898"));
		orcamentos.add(new Orcamento(2, "Gato", "Mimi", "Angorá", 3, "25/10/2020", "Sirley", "(19)99999-7171"));
		orcamentos.add(new Orcamento(3, "Outro", "Tico", "Canário", 0.1f, "23/04/2018", "Ana júlia", "(19)97788-7887"));
		orcamentos.add(new Orcamento(4, "Cachorro", "Thayson", "Labrador", 40, "10/05/2012", "Márcio Guerra", "(19)91454-1212"));
	}
}
